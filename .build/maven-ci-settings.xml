<settings>
    <profiles>
        <profile>
            <id>google-mirror</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <repositories>
                <repository>
                    <id>google-maven-central</id>
                    <name>GCS Maven Central mirror EU</name>
                    <url>https://maven-central.storage-download.googleapis.com/maven2/</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </repository>
            </repositories>
            <pluginRepositories>
                <pluginRepository>
                    <id>google-maven-central</id>
                    <name>GCS Maven Central mirror</name>
                    <url>https://maven-central.storage-download.googleapis.com/maven2/</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </pluginRepository>
            </pluginRepositories>
        </profile>
    </profiles>
</settings>
